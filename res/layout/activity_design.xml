<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/spinnerModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textRowNames"
            style="@style/formatGenericElementGone"/>
        
        <EditText 
            android:id="@+id/editRowNames"
            style="@style/formatGenericElementGone"
            android:inputType="textMultiLine"/>
        
        <TextView
            android:id="@+id/textColumnNames"
            style="@style/formatGenericElementGone" />
        
        <EditText 
            android:id="@+id/editColumnNames"
           	style="@style/formatGenericElementGone"
            android:inputType="textMultiLine"/>
        
        <TextView
            android:id="@+id/textMatrix"
          style="@style/formatGenericElementGone"
          android:text="@string/textMatrix" />
        
        <EditText 
            android:id="@+id/editMatrix"
           	style="@style/formatGenericElementGone"
            android:inputType="textMultiLine"/>
        
        <Button 
            android:id="@+id/buttonDoAnalysis"
            style="@style/formatGenericElementGone"
            android:text="@string/buttonDoAnalysis"
            android:onClick="onClick"/>
        
    </LinearLayout>

</ScrollView>